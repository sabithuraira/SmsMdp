<div class="box box-widget widget-user-2">
    <div class="box-header with-border">
        <h3 class="box-title">Data Detail Mata Pelajaran</h3>

        <div class="box-tools pull-right">
        <%= link_to raw('<i class="fa fa-list"></i> List'), dosens_path, class: "btn btn-box-tool btn-default" %>
        <%= link_to raw('<i class="fa fa-plus"></i> Add New'), new_dosen_path, class: "btn btn-box-tool btn-default" %>
        <%= link_to raw('<i class="fa fa-pencil"></i> Edit'), edit_dosen_path(@data), class: "btn btn-box-tool btn-default" %>
        <%= link_to raw('<i class="fa fa-remove"></i> Destroy'), dosen_path(@data), class: "btn btn-box-tool btn-default" , 
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
    
        </div>
    </div>
    <!-- Add the bg color to the header using any of the bg-* classes -->
    <div class="widget-user-header">
        <!-- /.widget-user-image -->
        <h3 class="widget-user-username"><%= @data.name %></h3>
        <h5 class="widget-user-desc"><%= @data.id %></h5>
    </div>
    <div class="box-footer no-padding">
        <ul class="nav nav-stacked">
        <li><a href="#">Created Date <span class="pull-right"><%= @data.created_at %></span></a></li>
        <li><a href="#">Last Modified <span class="pull-right"><%= @data.updated_at %></span></a></li>
        </ul>
    </div>
</div>


<div class="row">
      <div class="col-xs-12">
          <div class="box">
              <div class="box-header">
                  <h3 class="box-title">Kelas yang diajar</h3>
              </div>
  
              <div class="box-body table-responsive no-padding">
                  <table class="table table-hover" id="table_pertemuan">
                      <tr>
                          <th>Nama</th>
                          <th>Mata Kuliah</th>
                          <th>Tahun Ajaran</th>
                      </tr>
                      
                    <% @list_kelas.each do |row| %>
                        <tr class="accordion-toggle">
                            <td><%= row.nama %></td>
                            <td><%= row.mata_pelajaran_rel.name %></td>
                            <td><%= row.tahun_ajaran %></td>
                        </tr>
                    <% end %>
                  </table>
              </div>
          </div>
      </div>
  </div>