<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">SMS Terkirim</h3>
        
        <div class="box-tools">
          <%= form_tag({controller: "sentitem", action: "search"}, method: "post", id: "form_index") do %>
            <div class="input-group input-group-sm" style="width: 150px;">
              <input type="text" id="table_search" class="form-control pull-right" placeholder="Search">

              <div class="input-group-btn">
                <button type="submit" id="index_data" class="btn btn-default"><i class="fa fa-search"></i></button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover" id="table_data">
          <tr>
            <th>Text</th>
            <th>Nomor Tujuan</th>
          </tr>

          <% @datas.each do |data| %>
            <tr>
              <td><%= data.Text %></td>
              <td><%= data.DestinationNumber %></td>
            </tr>
          <% end %>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>