<div class="box box-widget widget-user-2">
    <div class="box-header with-border">
        <h3 class="box-title">Data Detail Tagihan</h3>

        <div class="box-tools pull-right">
        <%= link_to raw('<i class="fa fa-list"></i> List'), tagihans_path, class: "btn btn-box-tool btn-default" %>
        <%= link_to raw('<i class="fa fa-plus"></i> Add New'), new_tagihan_path, class: "btn btn-box-tool btn-default" %>
        <%= link_to raw('<i class="fa fa-pencil"></i> Edit'), edit_tagihan_path(@data), class: "btn btn-box-tool btn-default" %>
        <%= link_to raw('<i class="fa fa-remove"></i> Destroy'), tagihan_path(@data), class: "btn btn-box-tool btn-default" , 
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
    
        </div>
    </div>

    <div class="widget-user-header">
        <h3 class="widget-user-username">Tahun Masuk Mahasiswa <%= @data.tahun_masuk %></h3>
        <h5 class="widget-user-desc">Jumlah Bayaran BPP: <%= @data.bpp %></h5>
        <h5 class="widget-user-desc">Jumlah Bayaran per SKS: <%= @data.per_sks %></h5>
    </div>
    <div class="box-footer no-padding">
        <ul class="nav nav-stacked">
        <li><a href="#">Created Date <span class="pull-right"><%= @data.created_at %></span></a></li>
        <li><a href="#">Last Modified <span class="pull-right"><%= @data.updated_at %></span></a></li>
        </ul>
    </div>
</div>