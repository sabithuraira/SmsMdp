<% if @data.errors.any? %>
<div class="box-body">
  <div class="alert alert-danger">
    <ul>
      <% @data.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <%end%>
    </ul>
  </div>
</div>
<% end %>

<%= form_for @data do |f| %>
<div class="box-body">
    <div class="row">
        <div class="col-md-12">

            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control", placeholder: "Masukkan Nama" %>
            </div>

            <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: "form-control", placeholder: "Masukkan Email" %>
            </div>

            <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control", placeholder: "Masukkan Password" %>
            </div>

            <div class="form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Masukkan Konfirmasi Password" %>
            </div>

            <div class="form-group">
                <%= f.label :date_birth %>
                <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    <%= f.text_field :date_birth, class: "form-control pull-right" %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :place_birth %>
                <%= f.text_field :place_birth, class: "form-control" %>
            </div>
        
        </div>
    </div>
    
</div>

<div class="box-footer">
<!--<button type="submit" class="btn btn-default">Cancel</button>-->
<button type="submit" class="btn btn-info pull-right">Submit</button>
</div>

<% end %>